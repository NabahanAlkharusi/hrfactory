}

<h1>CheckOut</h1>

<h4>Pyments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="@Url.Action("CheckOut")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(m => m.CourseID, new { @class = "control-label" })
