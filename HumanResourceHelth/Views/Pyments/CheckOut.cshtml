                @Html.ValidationMessageFor(m => m.CourseID)
              
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserID, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.UserID, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserID)
               
            </div>
            <div class="form-group">
                 @Html.LabelFor(m => m.PymentDate, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.PymentDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PymentDate)
               
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Amount, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Amount)
             
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PaymentMethod, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.PaymentMethod, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PaymentMethod)
              
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.cardname, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.cardname, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.cardname)
              
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.cardnumber, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.cardnumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.cardnumber)


