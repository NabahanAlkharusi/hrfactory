@using HumanResourceHelth.Model.Resources
@model HumanResourceHelth.Model.Departments

@{
    ViewData["Title"] = @AppResource.Edit;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div class="container">
    <div class="panel panel-info">
        <div class="panel-heading">

            <h1>@AppResource.Edit</h1>

            <h4>@AppResource.Departments</h4>

        </div>
        <div class="panel-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-4">
                        @Html.HiddenFor(m => m.DepartmentID, new { @class = "form-control", required = true })
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" id="DepartmentID" value="@Model.DepartmentID" />
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">
                                @AppResource.Save
                                <i class="fa fa-save"></i>
                            </button>

                        </div>
                    </div>
                </div>

            }
        </div>
        <div class="panel-footer">
            <a href="@Url.Action("Index")">@AppResource.BackToList</a>

        </div>
    </div>
</div>


