@using HumanResourceHelth.Model.Resources
@*@inject LocalizationService LocalizationService*@


@model HumanResourceHelth.Model.Courses

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/assets/TrCss/checkout.css" rel="stylesheet" />

<link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
<link href="~/Areas/Admin/assets/plugins/font-awesome/css/font-awesome.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/c19ae50bd2.js" crossorigin="anonymous"></script>
<div class="container">
    <div class="container-co">

        <h2>Checkout</h2>
        <div class="row">
            <div class="col-xl-8 col-md-8 col-12">

                <div class="container-co">

                    @using (Html.BeginForm("CheckOut", "Pyments", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @*<form action="@Url.Action("CheckOut")">*@

                        <div class="row">
                            <div class="col-50" hidden>
                                <h3>Billing Address</h3>
                            </div>

                            <div class="col-12">
                                <h3>Payment</h3>
                                <label for="fname">Accepted Cards</label>
                                <div class="icon-container">
                                    <i class="fa fa-icon-cc-visa" style="color:navy;"></i>
                                    <i class="fa fa-cc-amex" style="color:blue;"></i>
                                    <i class="fa fa-cc-mastercard" style="color:red;"></i>
                                    <i class="fa fa-cc-discover" style="color:orange;"></i>
                                </div>

                                @Html.HiddenFor(m => m.CourseID)
                                <input type="text" id="Amount" name="Amount" value="@Model.CoursePrice" />

                                <label for="cname" hidden>Name on Card</label>
                                <input type="text" id="cname" name="cardname" placeholder="Name on Card">
                                <label for="ccnum" hidden>Credit card number</label>
                                <input type="text" id="ccnum" name="cardnumber" placeholder="Credit card number">

                                <div class="row">
                                    <div class="col-xl-4 col-md-4 col-12">
                                        <label for="expmonth">Exp Month</label>
                                        <input type="text" id="expmonth" name="expmonth" placeholder="MM">
                                    </div>
                                    <div class="col-xl-4 col-md-4 col-12">
                                        <label for="expyear">Exp Year</label>
                                        <input type="text" id="expyear" name="expyear" placeholder="yyyy">
                                    </div>
                                    <div class="col-xl-4 col-md-4 col-12">
                                        <label for="cvv">CVV</label>
                                        <input type="text" id="cvv" name="cvv" placeholder="cvv">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <label hidden>
                            <input type="checkbox" checked="checked" name="sameadr"> Shipping address same as billing
                        </label>
                        @*<input type="submit" value="Checkout" class="btn btn-success btn-lg">*@
                        <input type="submit" value="@AppResource.Save" class="btn btn-success btn-lg" />

                        @*</form>*@
                    }
                </div>
            </div>
            <div class="col-xl-4 col-md-4 col-12">

                <div class="container-co">
                    <h4>Cart <span class="price" style="color:black"><i class="fa fa-shopping-cart"></i> <b>1</b></span></h4>
                    <p>
                        <a href="#">
                            @Html.DisplayFor(model => model.CourseName)
                        </a>
                        <span class="price">
                            @Html.DisplayFor(model => model.CoursePrice)
                        </span>
                    </p>

                    <hr>
                    <p>
                        Total <span class="price" style="color:black">
                            <b>
                                @Html.DisplayFor(model => model.CoursePrice)
                            </b>
                        </span>
                    </p>
                </div>
            </div>
        </div>


    </div>
</div>