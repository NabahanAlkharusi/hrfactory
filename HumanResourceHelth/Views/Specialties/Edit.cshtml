@using HumanResourceHelth.Model.Resources
@model HumanResourceHelth.Model.Specialties


@{
    ViewData["Title"] = AppResource.Edit;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}


<div class="container">
    <div class="panel panel-info">
        <div class="panel-heading">



            <h1> @AppResource.Edit</h1>

            <h4> @AppResource.Specialties </h4>

        </div>
        <div class="panel-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="row">
                    <div class="col-md-4">
                            @Html.HiddenFor(m => m.SpecialtyID, new { @class = "form-control", required = true })

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="SpecialtyID" />
                            <div class="form-group">
                                @Html.LabelFor(m => m.SpecialtyName, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.SpecialtyName, new { @class = "form-control", required = true })


                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">
                                    @AppResource.Save
                                    <i class="fa fa-save"></i>
                                </button>

                            </div>
                    </div>
                </div>

            }
            </div>
            <div class="panel-footer">
                <a href="@Url.Action("Index")">@AppResource.BackToList</a>

            </div>
            </div>
            </div>


            @*@section Scripts {
                @{Html.RenderPartial("_ValidationScriptsPartial");}
            }*@
